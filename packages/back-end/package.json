{
  "name": "weathr_back-end",
  "version": "1.0.0",
  "private": true,
  "description": "Weathr - {Node,Hapi}.js Back-End",
  "author": "Manpreet \"Mannie\" Singh",
  "license": "MIT",
  "homepage": "https://github.com/intrnt-dolphin/Weathr#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/intrnt-dolphin/Weathr.git"
  },
  "bugs": {
    "url": "https://github.com/intrnt-dolphin/Weathr/issues"
  },
  "main": "app/index.js",
  "engine": {
    "node": "9.3.0"
  },
  "scripts": {
    "start": "pm2 start app/index.js --name weathr_back-end -i 0",
    "dev": "cross-env NODE_ENV=development pm2 start app/index.js --name weathr_back-end_dev --watch",
    "test": "ava | tnyan"
  },
  "dependencies": {
    "axios": "^0.17.1",
    "hapi": "^17.2.0",
    "pm2": "^2.9.1",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "ava": "^0.21.0",
    "cross-env": "^5.1.3",
    "tap-nyan": "^1.1.0"
  },
  "ava": {
    "files": [
      "test/*.test.js"
    ],
    "source": [
      "app/**/*.js"
    ],
    "tap": true
  }
}
